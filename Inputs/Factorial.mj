main inicio();

void inicio() {
	int n = 5;
	String resultado = n + "! = " + factorial(n);
	println(resultado);
	n --;
	resultado = n + "! = " + factorial(n);
	println(resultado);
	n += 2;
	resultado = n + "! = " + factorial(n);
	println(resultado);
	n = n - 3;
	resultado = n + "! = " + factorial(n);
	println(resultado);
}

int factorial(int n) {
	if(n == 0) {
		return 1;
	}
	return n * factorial(n - 1);
}